{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "sh scripts/script.sh -b 1",
    "clean": "sh scripts/script.sh -c 1",
    "dev": "lerna run watch --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . --ext .js,.ts --cache",
    "lint:fix": "eslint . --ext .js,.ts --cache --fix",
    "test:unit-watch": "jest --coverage --verbose --watch",
    "test:unit": "jest --coverage --verbose",
    "link": "sh scripts/script.sh -l 1",
    "unlink": "sh scripts/script.sh -u 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ykfe/ssr.git"
  },
  "author": "zhangyuang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ykfe/ssr/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "homepage": "https://github.com/ykfe/ssr#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "babel-eslint": "^10.0.2",
    "concurrently": "^5.3.0",
    "eslint-config-standard-react-ts": "^1.0.3",
    "husky": "^4.3.0",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.9.0"
  }
}

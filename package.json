{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn && cd example/spa && yarn",
    "clean": "rm -rf yarn.lock package-lock.json node_modules example/spa/node_modules packages/**/cjs packages/**/esm && lerna clean",
    "dev": "lerna run watch --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . --ext .js,.ts --cache",
    "lint:fix": "eslint . --ext .js,.ts --cache --fix",
    "test:unit-watch": "jest --coverage --verbose --watch",
    "test:unit": "jest --coverage --verbose",
    "link": "cd packages/cli && yarn link && cd ../../example/spa && yarn link ssr",
    "unlink": "cd packages/cli && yarn unlink"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ykfe/ssr.git"
  },
  "author": "zhangyuang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ykfe/ssr/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "homepage": "https://github.com/ykfe/ssr#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "babel-eslint": "^10.0.2",
    "husky": "^4.3.0",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.9.0",
    "eslint-config-standard-react-ts": "^1.0.3"
  }
}

// 此文件仅用于本地开发配置IDE在检查web下ts语法时的规则，不用于实际构建
{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "@": ["./"] // 此处映射是相对于"baseUrl"
    }
  },
  "include": [
    "./"
  ]
}

